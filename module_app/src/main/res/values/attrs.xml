<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <!--点选中的颜色-->
        <attr name="dotIndicatorFocus" format="color|reference" />
        <!--点未选中颜色-->
        <attr name="dotIndicatorNormal" format="color|reference" />
        <!--点的大小-->
        <attr name="dotSize" format="dimension" />
        <!--点的距离-->
        <attr name="dotDistance" format="dimension" />
        <!--点的位置-->
        <attr name="dotGravity" format="enum">
            <!--居中-->
            <enum name="center" value="0" />
            <!--右边-->
            <enum name="right" value="1" />
            <!--左边-->
            <enum name="left" value="-1" />
        </attr>
        <!--底部背景颜色-->
        <attr name="bottomColor" format="color|reference" />
        <!--宽度比-->
        <attr name="widthProportion" format="float" />
        <!--高度比-->
        <attr name="heightProportion" format="float" />
        <!--是否两边突出条目 实现一屏显示多个View的效果-->
        <attr name="bulge" format="boolean"/>
        <!--两边凸出距离-->
        <attr name="bulgeDistance" format="integer"/>
        <!--底部模式 小点 文字描述位置 覆盖在图片上 在整个图片下方-->
        <attr name="bottomType" format="enum">
            <!--底部覆盖图片-->
            <enum name="coverPic" value="0"/>
            <!--底部在图片下方-->
            <enum name="belowPic" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <!--文本-->
        <attr name="customText" format="string" />
        <!--字体大小-->
        <attr name="customTextSize" format="dimension" />
        <!--字体颜色-->
        <attr name="customTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CustomStepView">
        <!--外圆圆弧弧边框-->
        <attr name="outerBorderSize" format="dimension" />
        <!--内圆圆弧边框-->
        <attr name="innerBorderSize" format="dimension" />
        <!--外圆圆弧边框颜色-->
        <attr name="outerColor" format="color|reference" />
        <!--内圆圆弧边框颜色-->
        <attr name="innerColor" format="color|reference" />
        <!--文字颜色-->
        <attr name="stepTextColor" format="color|reference" />
        <!--文字大小-->
        <attr name="stepTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ColorFlowTextView">
        <!--不变的颜色-->
        <attr name="orginColor" format="color|reference" />
        <!--改变的颜色-->
        <attr name="changeColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CustomCircleProgress">
        <!--外圆颜色-->
        <attr name="outerBorderColor" format="color|reference" />
        <!--内圆颜色-->
        <attr name="innerBorderColor" format="color|reference" />
        <!--外圆边框宽度-->
        <attr name="outerBorderStroke" format="dimension" />
        <!--内圆边框宽度-->
        <attr name="innerBorderStroke" format="dimension" />
        <!--文字颜色-->
        <attr name="circleProgressTextColor" format="color|reference" />
        <!--文字大小-->
        <attr name="circleProgressTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!--默认星星-->
        <attr name="ratingNormal" format="reference" />
        <!--选中星星-->
        <attr name="ratingFocus" format="reference" />
        <!--星星数量-->
        <attr name="ratingNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="SlidingMenu">
        <!--内容布局距离右边的-->
        <attr name="rightMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SlidingView">
        <!--内容布局距离右边的-->
        <attr name="rightWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomPasswordEditText">
        <!--密码个数-->
        <attr name="passwordNum" format="integer" />
        <!--密码边框圆角大小-->
        <attr name="borderRadius" format="dimension" />
        <!--密码边框线大小-->
        <attr name="borderSize" format="dimension"/>
        <!--密码边框颜色-->
        <attr name="borderColor" format="reference|color" />
        <!--密码点半径大小-->
        <attr name="passwordDotRadius" format="dimension"/>
        <!--密码点的颜色-->
        <attr name="passwordDotColor" format="reference|color"/>
        <!--分割线颜色-->
        <attr name="splitLineColor" format="reference|color"/>
        <!--分割线大小-->
        <attr name="splitLineSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="UPMarqueeView">
        <attr name="interval" format="integer"/>
        <attr name="inDuration" format="integer"/>
        <attr name="outDuration" format="integer"/>
        <attr name="upTextColor" format="reference|color"/>
        <attr name="upTextSize" format="dimension"/>
        <attr name="upGravity" format="enum">
            <!--居中-->
            <enum name="center" value="0" />
            <!--右边-->
            <enum name="right" value="1" />
            <!--左边-->
            <enum name="left" value="-1" />
        </attr>
    </declare-styleable>
</resources>